# Fail2ban configuration
# Generated by Ansible for {{ inventory_hostname }}

[DEFAULT]
# Ban time in seconds (24 hours)
bantime = 86400

# Find time window
findtime = 600

# Number of failures before ban
maxretry = 3

# Backend to use
backend = auto

# Ignore IP addresses
ignoreip = 127.0.0.1/8 ::1 {{ ansible_default_ipv4.address }}/32

[sshd]
enabled = true
port = ssh
logpath = /var/log/auth.log
maxretry = 3
bantime = 3600

[sshd-ddos]
enabled = true
port = ssh
logpath = /var/log/auth.log
maxretry = 6
bantime = 600
